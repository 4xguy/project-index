{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/indexer.sh start"
          },
          {
            "type": "command", 
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/load-index.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/indexer.sh update"
          }
        ]
      }
    ]
  }
}